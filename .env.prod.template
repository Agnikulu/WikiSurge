# =============================================================================
# WikiSurge - Production Environment Variables
# =============================================================================
# Copy this file to .env.prod and customize for your environment.
# NEVER commit .env.prod to version control.
# =============================================================================

# ---------- Kafka ----------
KAFKA_BROKERS=kafka:9092
KAFKA_EXTERNAL_PORT=19092
KAFKA_RETENTION_HOURS=168

# ---------- Redis ----------
REDIS_URL=redis:6379
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb
REDIS_EVICTION_POLICY=allkeys-lru

# ---------- Elasticsearch ----------
ES_URL=http://elasticsearch:9200
ES_PORT=9200
ES_RETENTION_DAYS=7
ES_MAX_DOCS_PER_DAY=10000

# ---------- API ----------
API_PORT=8080
API_RATE_LIMIT=1000
API_MAX_WS_CONNECTIONS=100

# ---------- Frontend ----------
FRONTEND_PORT=80

# ---------- Features ----------
FEATURE_ES_INDEXING=true
FEATURE_TRENDING=true
FEATURE_EDIT_WARS=true
FEATURE_WEBSOCKET=true

# ---------- Logging ----------
LOG_LEVEL=warn
LOG_FORMAT=json

# ---------- Monitoring ----------
METRICS_PORT=2112
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ---------- Grafana ----------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# ---------- Image Versions ----------
IMAGE_TAG=latest
